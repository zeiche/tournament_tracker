# twilio configuration template
# copy these to your .env file and fill in actual values

# step 1: get from twilio console dashboard
# https://www.twilio.com/console
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# step 2: buy a phone number
# https://console.twilio.com/us1/develop/phone-numbers/manage/search
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# step 3: create elastic sip trunk
# https://console.twilio.com/us1/develop/elastic-sip-trunking/getting-started
TWILIO_SIP_DOMAIN=your-trunk-name.pstn.twilio.com
TWILIO_SIP_USERNAME=asterisk
TWILIO_SIP_PASSWORD=your-strong-password-here

# server configuration (already filled)
ASTERISK_EXTERNAL_IP=64.111.98.139
ASTERISK_LOCAL_NET=192.168.0.0/16

# optional: for webhook-based integration
TWILIO_VOICE_URL=http://64.111.98.139:8080/twilio/voice
TWILIO_SMS_URL=http://64.111.98.139:8080/twilio/sms
TWILIO_STATUS_CALLBACK=http://64.111.98.139:8080/twilio/status